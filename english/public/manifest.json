{
    "name": "english",
    "description": "学习英语插件",
    "version": "1.0",
    "manifest_version": 3,
    "homepage_url": "https://www.baidu.com",
    "icons":{
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "background":{
        "page": "background.html"
    },
    "browser_action":{
        "default_icon": "img/icon-128.png",
        "default_title": "学习英语插件",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions":[
        "tabs",
        "activeTab",
        "storage",
        "contextMenus",
        "notifications",
        "http://*/*",
        "https://*/*",
        "webRequest"
    ]
}